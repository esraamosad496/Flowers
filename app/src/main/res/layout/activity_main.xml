<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imagepink"
                android:background="@drawable/pink"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pink"
                android:layout_below="@id/imagepink"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:background="@drawable/buttom_shape"></Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imblue"
                android:background="@drawable/blue"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imblue"
                android:text="blue"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:background="@drawable/buttom_shape"></Button>
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/imyellow"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/yellow"></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imyellow"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttom_shape"
                android:text="yellow"
                android:textSize="15sp"></Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/impurple"
                android:background="@drawable/purple"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/impurple"
                android:text="purple"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:background="@drawable/buttom_shape"></Button>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imorange"
                android:background="@drawable/orange"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imorange"
                android:text="orange"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:background="@drawable/buttom_shape"></Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imred"
                android:background="@drawable/red"></TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imred"
                android:text="red"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:background="@drawable/buttom_shape"></Button>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>